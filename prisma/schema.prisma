generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
  binaryTargets = ["native", "darwin", "darwin-arm64"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model LocalDirectory {
  id          Int      @id @default(autoincrement())
  directory   String
  projectName String?
  updatedAt   DateTime @updatedAt
}

model FileVectorIndex {
  id       Int    @id @default(autoincrement())
  filePath String @unique
  fileHash String
  vectorId Int
  mtime    BigInt
}

model FileHistory {
  id        Int      @id @default(autoincrement())
  filePath  String
  content   String
  action    String
  operator  String?
  newPath   String?
  createdAt DateTime @default(now())
}

model AIProvider {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  displayName String
  icon        String
  host        String
  endpoint    String
  link        String
  isActive    Boolean   @default(true)
  isCustom    Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  models      AIModel[]
}

model AIModel {
  id          Int        @id @default(autoincrement())
  name        String
  displayName String?
  providerId  Int
  modelType   String     @default("LLM") // CODE, LLM, SWOT
  isBeta      Boolean    @default(false)
  isActive    Boolean    @default(true)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  provider    AIProvider @relation(fields: [providerId], references: [id], onDelete: Cascade)

  @@unique([name, providerId])
}

model Settings {
  id           Int      @id @default(autoincrement())
  provider     String   @default("openai")
  apiKeys      Json?
  customApi    Json?
  defaultModel String?
  modelParams  Json?
  general      Json?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
